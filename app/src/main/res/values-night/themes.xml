<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/accent_gold</item>
        <item name="colorPrimaryVariant">@color/accent_gold_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/accent_gold</item>
        <item name="colorSecondaryVariant">@color/accent_gold_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Controls -->
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/accent_gold</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Default text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
</resources>